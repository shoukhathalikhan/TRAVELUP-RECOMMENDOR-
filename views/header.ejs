<header style="height: 75px; width: auto;">
    <h1 class="logo-text">TravelUP</h1>
    
    <nav class="navbar">
        <a href="#home">Home</a>
        <a href="#about">About</a>
        <a href="#places">Places</a>
        <% if (user && user.username) { %>
            <a href="#" class="welcome-user" style="font-weight: bold;">Welcome, <%= user.username %>!</a>
            <a href="/indexpage">Logout</a>
        <% } else { %>
            <a href="/login">Login</a>
        <% } %>
    </nav>
    
</header>

<style>
    .search-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.98);
        z-index: 1000;
        display: none;
        justify-content: center;
        align-items: center;
    }
    .search-container {
        width: 80%;
        max-width: 600px;
        position: relative;
    }
    .search-input {
        width: 100%;
        font-size: 24px;
        padding: 10px 0;
        border: none;
        border-bottom: 2px solid #333;
        outline: none;
        background: transparent;
    }
    .search-close {
        position: absolute;
        top: -40px;
        right: 0;
        font-size: 30px;
        cursor: pointer;
        color: #333;
    }
    .logo-text {
            font-family: 'Pacifico', cursive;
            color: #26c6da;
            font-size: 3rem;
            letter-spacing: 0.05em;
        }
        
</style>
