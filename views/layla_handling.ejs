<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Layla AI - Your Personal Travel Agent</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
 
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap');
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            line-height: 1.5;
        }
        
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: 1rem 0;
        }
        
        nav .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .logo {
            display: flex;
            align-items: center;
            color: white;
            font-weight: 500;
            font-size: 1.5rem;
        }
        
        .logo img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 0.5rem;
        }
        
        .nav-buttons button {
            background: none;
            border: none;
            color: white;
            font-size: 1.25rem;
            cursor: pointer;
            margin-left: 1rem;
        }
        
        .hero {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .hero video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 30%;
            object-fit: cover;
        }
        
        .hero-content {
            position: relative;
            z-index: 1;
        }
        
        h1 {
            font-size: 3rem;
            margin-bottom: 2rem;
        }
        
        .chat-interface {
            background: linear-gradient(to right, rgba(255, 254, 234, 0.9), rgba(183, 232, 235, 0.9));
            border-radius: 12px;
            padding: 1.5rem;
            max-width: 600px;
            width: 100%;
            margin: 0 auto;
        }
        
        .chat-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }
        
        .chat-header img {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            margin-right: 0.5rem;
        }
        
        .ask-button {
            background: #00b8d4;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
        }
        
        .chat-input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 1rem;
        }
        
        .suggestion-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }
        
        .suggestion-buttons button {
            background: white;
            border: 1px solid #ccc;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            white-space: nowrap;
        }
        
        .categories {
            padding: 4rem 2rem;
            background: white;
        }
        
        .categories h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 2rem;
            color: #333;
        }
        
        .category-scroll {
            display: flex;
            gap: 1.5rem;
            overflow-x: auto;
            padding-bottom: 1rem;
            scrollbar-width: none;
        }
        
        .category-scroll::-webkit-scrollbar {
            display: none;
        }
        
        .category-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: none;
            border: none;
            font-size: 1rem;
            color: #666;
            cursor: pointer;
            white-space: nowrap;
        }
        
        .category-item.active {
            color: #00B4D8;
            font-weight: 600;
        }
        
        .trip-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }
        
        .trip-card {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .trip-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <nav>
        <div class="container">
            <div class="logo">
                <img src="/image/Z-AI3.jpg" alt="Layla Logo">
                ZAIBA
            </div>
            <div class="nav-buttons">
                <button><i class="fas fa-globe"></i></button>
                <button><i class="fas fa-bars"></i></button>
            </div>
        </div>
    </nav>

    <section class="hero">
        <video src="images/vid1.mp4" style="position: absolute; height: 65%; width: 100%; inset: 0px; object-fit: cover; color: transparent;" loop autoplay muted></video>
        <div class="hero-content">
            <h1>Hi, I'm Zaiba, your personal<br>travel agent</h1>
            <div class="chat-interface">
                <div class="chat-header">
                    <div>
                        <img src=/image/Z-AI3.jpg alt="Layla AI">
                        <span>Zaibaa AI</span>
                    </div>
                    <a href="/chatbot">
                        <button class="ask-button">Ask Anything</button>
                    </a>
                      
                </div>
                <input type="text" class="chat-input" placeholder="Best tropical beach destinations?">
                <div class="suggestion-buttons">
                    
                    <button onclick="window.location.href='/chatbot';">Inspire where to go</button>

                      
                      
                    <button>Create a new Trip</button>
                    <button>Find family hotels in Dubai</button>
                    <button>Build 7 day island hopping</button>
                </div>
            </div>
        </div>
    </section>

    <section class="categories">
        <h2>Discover Unforgettable Trips</h2>
        <div class="category-scroll">
            <button class="category-item active">
                <i class="fas fa-star"></i>
                For You
            </button>
            <button class="category-item">
                <i class="fas fa-hiking"></i>
                Adventure
            </button>
            <button class="category-item">
                <i class="fas fa-umbrella-beach"></i>
                Beach
            </button>
            <button class="category-item">
                <i class="fas fa-city"></i>
                City Trips
            </button>
            <button class="category-item">
                <i class="fas fa-gem"></i>
                Hidden Gems
            </button>
            <button class="category-item">
                <i class="fas fa-crown"></i>
                Luxury
            </button>
            <button class="category-item">
                <i class="fas fa-landmark"></i>
                Historic & Culture
            </button>
            <button class="category-item">
                <i class="fas fa-heart"></i>
                Romantic
            </button>
            <button class="category-item">
                <i class="fas fa-moon"></i>
                Night Life
            </button>
        </div>
        <div class="trip-cards">
            <div class="trip-card">
                <img src="/image/a2.jpg" alt="Beach Trip">
                <div class="content">
                    <h3>Beach trip</h3>
                </div>
            </div>
            <div class="trip-card">
                <img src="/image/a1.jpg" alt="Mountain Trip">
                <div class="content">
                    <h3>Mountain trip</h3>
                </div>
            </div>
            <div class="trip-card">
                <img src="/image/a3.jpg" alt="City Trip">
                <div class="content">
                    <h3>City trip</h3>
                </div>
            </div>
            
        </div>

        <div class="trip-cards">
            <div class="trip-card">
                <img src="/image/a4.jpg" alt="Historic Trip">
                <div class="content">
                    <h3>Historic trip</h3>
                </div>
            </div>
            <div class="trip-card">
                <img src="/image/a5.jpg" alt="Relaxation Trip">
                <div class="content">
                    <h3>Relaxation trip</h3>
                </div>
            </div>
            <div class="trip-card">
                <img src="/image/a6.jpg" alt="Adventure Trip">
                <div class="content">
                    <h3>Adventure trip</h3>
                </div>
            </div>
            
        </div>

    </section>

    <script>
        // Add smooth scrolling to category items
        const categoryScroll = document.querySelector('.category-scroll');
        let isDown = false;
        let startX;
        let scrollLeft;

        categoryScroll.addEventListener('mousedown', (e) => {
            isDown = true;
            startX = e.pageX - categoryScroll.offsetLeft;
            scrollLeft = categoryScroll.scrollLeft;
        });

        categoryScroll.addEventListener('mouseleave', () => {
            isDown = false;
        });

        categoryScroll.addEventListener('mouseup', () => {
            isDown = false;
        });

        categoryScroll.addEventListener('mousemove', (e) => {
            if (!isDown) return;
            e.preventDefault();
            const x = e.pageX - categoryScroll.offsetLeft;
            const walk = (x - startX) * 2;
            categoryScroll.scrollLeft = scrollLeft - walk;
        });

        // Add click event to "Ask Anything" button
        const askButton = document.querySelector('.ask-button');
        askButton.addEventListener('click', () => {
            alert('Ask Layla anything about your travel plans!');
        });

        // Add click events to suggestion buttons
        const suggestionButtons = document.querySelectorAll('.suggestion-buttons button');
        suggestionButtons.forEach(button => {
            button.addEventListener('click', () => {
                alert(`You clicked: ${button.textContent}`);
            });
        });

        // Add click events to category buttons
        const categoryButtons = document.querySelectorAll('.category-item');
        categoryButtons.forEach(button => {
            button.addEventListener('click', () => {
                categoryButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                alert(`You selected the ${button.textContent.trim()} category`);
            });
        });
    </script>
</body>
</html>