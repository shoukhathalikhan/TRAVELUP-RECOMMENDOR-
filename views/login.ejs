<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dual Login / Signup Form</title>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css'>
    <link rel="stylesheet" href="/css/login.css" />
</head>
<body>
    <!-- Error Handling -->
    <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <!-- Success Handling -->
    <% if (typeof success !== 'undefined') { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>

    <div class="container" id="container">
        <!-- Signup Form -->
        <div class="form-container sign-up-container">
            <form action="/signup" method="POST">
                <h1>Sign Up</h1>
                <div class="social-container">
                    <a href="https://github.com" target="_blank" class="social"><i class="fab fa-github"></i></a>
                </div>
                <span>Or use your email for registration</span>
                <label>
                    <input type="email" name="email" placeholder="Email" required />
                </label>
                <label>
                    <input type="text" name="username" placeholder="Username" required />
                </label>
                <label>
                    <input type="password" name="password" placeholder="Password" required />
                </label>
                <label>
                    <input type="password" name="pwdconfirm" placeholder="Confirm Password" required />
                </label>
                <button type="submit" style="margin-top: 9px">Sign Up</button>
            </form>
        </div>

        <!-- Login Form -->
        <div class="form-container sign-in-container">
            <form action="/login" method="POST">
                <h1>Login</h1>
                <div class="social-container">
                    <a href="https://github.com" target="_blank" class="social"><i class="fab fa-github"></i></a>
                </div>
                <label>
                    <input type="text" name="uid" placeholder="Username or Email" required />
                </label>
                <label>
                    <input type="password" name="password" placeholder="Password" required />
                </label>
                <a href="#">Forgot your password?</a>
                <button type="submit">Login</button>
            </form>
        </div>

        <!-- Overlay for switching between login and signup -->
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected, login with your account.</p>
                    <button class="ghost mt-5" id="signIn">Login</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Create Account</h1>
                    <p>Sign up if you don't have an account.</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.min.js'></script>
    <script src="../js/login.ejs"></script>
    

    <script>
        
        // Switching between login and signup form
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        signUpButton.addEventListener('click', () => {
            container.classList.add('right-panel-active');
        });

        signInButton.addEventListener('click', () => {
            container.classList.remove('right-panel-active');
        });
    </script>

</body>
</html>
